alias {
    hoge=function()
        local path = nyagos.eval('pwd')
        print("\"".. path .. "\"")
    end
}

nyagos.bindkey("C_C","INTR")
nyagos.bindkey("C_X",
    function(this)
        print("\nthis.text: [" .. this.text .. "]")
        print("this.pos: " .. this.pos)
        print("this.text:len: " .. string.len(this.text))
        return false
    end
)
nyagos.bindkey("C_N",
    function(this)
        search_history(this, false)
    end
)
nyagos.bindkey("C_P",
    function(this)
        search_history(this, true)
    end
)

